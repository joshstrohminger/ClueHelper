<Window x:Class="ScoreCard.SuggestionResponseDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScoreCard"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:DialogViewModelDesignData, IsDesignTimeCreatable=True}"
        Title="Suggestion Response" Height="300" Width="300">
    <DockPanel LastChildFill="True">
        <TextBlock DockPanel.Dock="Top" Text="{Binding Responder.Name, StringFormat='Response from {0}'}"/>
        <UniformGrid DockPanel.Dock="Bottom" Columns="3">
            <UniformGrid.Resources>
                <Style TargetType="Button" x:Key="ResultButton">
                    <Setter Property="Margin" Value="5"/>
                </Style>
            </UniformGrid.Resources>
            <Button Content="None" Style="{StaticResource ResultButton}"
                    Command="{Binding CloseWithResult, RelativeSource={RelativeSource AncestorType=local:SuggestionResponseDialog}}"
                    CommandParameter="{x:Static local:DialogResult.None}"/>
            <Button Content="Maybe"
                    Command="{Binding CloseWithResult, RelativeSource={RelativeSource AncestorType=local:SuggestionResponseDialog}}"
                    CommandParameter="{x:Static local:DialogResult.Maybe}">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource ResultButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Cards.Count}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Content="Skip" Style="{StaticResource ResultButton}"
                    Command="{Binding CloseWithResult, RelativeSource={RelativeSource AncestorType=local:SuggestionResponseDialog}}"
                    CommandParameter="{x:Static local:DialogResult.Skip}"/>
        </UniformGrid>
        <ItemsControl ItemsSource="{Binding Cards}" VerticalAlignment="Center" HorizontalAlignment="Center">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding Name, StringFormat='Has {0}'}"
                            Command="{Binding CloseWithCard, RelativeSource={RelativeSource AncestorType=local:SuggestionResponseDialog}}"
                            CommandParameter="{Binding .}"
                            Margin="5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
